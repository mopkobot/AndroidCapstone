<?xml version="1.0" encoding="utf-8"?>
<!-- Defining Scroll View -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            style="@style/MyScrollView">
    <!-- Defining Linear Layout -->
    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            style="@style/MyLayout">
        <!-- TextBox where the title is shown -->
        <TextView
                android:id="@+id/Title1"
                style="@style/MyMainHeader"/>
        <!-- Gallery where the slider with all of the pictures is shown -->
        <Gallery
                android:id="@+id/Gallery01"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"/>
        <!-- TextBox where the explanation for the pictures is displayed -->
        <TextView
                android:id="@+id/galleryTextView"
                style="@style/MySubHeader"
                android:layout_gravity="center"/>
        <!-- Image Box where the picture is shown, once the user clicks on it at the Gallery -->
        <ImageView
                android:id="@+id/imview"
                style="@style/MyGalleryImageView"/>
        <!-- Empty text box so we have some empty space between ImageView and the button -->
        <TextView
                android:id="@+id/Empty2"
                style="@style/MySubHeader"/>
        <!-- Button that will take the user to the slide show -->
        <Button
                android:id="@+id/SlideShow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Slide Show"/>
    </LinearLayout>

</ScrollView>