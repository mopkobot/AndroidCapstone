<?xml version="1.0" encoding="utf-8"?>

<!-- Gradient used for Home Screen background. Top: Loras purple, Bottom: Black -->

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                    android:angle="90"
                    android:startColor="#48235d"
                    android:endColor="#000000"
                    android:type="linear"/>
        </shape>
    </item>
</selector>
